<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Criar_conta" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/textColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryLight</item>
        <item name="colorOnSecondary">@color/textColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="card">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardElevation">6dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="card2">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">10dp</item>

    </style>

    <style name="button">
        <item name="backgroundTint">@color/colorSecondary</item>
    </style>

    <style name="buttonRounded" parent="button">
        <item name="android:layout_marginEnd">-10dp</item>
        <item name="android:layout_marginBottom">-10dp</item>
        <item name="android:contentDescription">"@string/button"</item>
    </style>

    <style name="input">
        <item name="android:background">@drawable/input</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="input2" parent="input">
        <item name="android:background">@drawable/input2</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="title" parent="text">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="body" parent="text">
        <item name="android:textSize">16sp</item>
    </style>

</resources>